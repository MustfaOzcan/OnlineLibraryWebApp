@model List<Kiralama> 

@if (TempData["basarili"] != null)
{
	@* <h2 class="text-success">@TempData["basarili"]</h2> *@

	<div class="alert alert-dismissible alert-success">
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		<strong>Tebrikler!</strong> başarılı <a href="#" class="alert-link">@TempData["basarili"]</a>.
	</div>

}

	<div class="container">


		<div class="row pt-3 pb-4">

		<h1><bold>Kiralamalar</bold></h1>

		</div>

		<table class="table table-hover">

			<thead>
				<tr class="table-primary">
					<th>
						Id
					</th>
					<th>
					  Ögrenci ID
					</th>

					<th>
					Kitap ID:
					</th>

					<th>
						Kitap Fiyat:
					</th>

					<th>
						<!--güncelle header-->
					</th>

					<th>

						<!--sil header-->
					</th>
				</tr>
			</thead>


			<tbody>
				@foreach (var kiralama in Model)
				{
					<tr class="table-secondary">
						<td>
							@kiralama.Id
						</td>

						<td>
							@kiralama.OgrenciId
						</td>

						<td>
							@kiralama.Kitap.KitapAdi
						</td>


						<td>
							@kiralama.Kitap.Fiyat
						</td>


						<td>
						<a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" type="button" class="btn btn-outline-primary">Güncelle</a>
						</td>

						<td>
						<a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" type="button" class="btn btn-outline-danger">Sil</a>
						</td>
					
					</tr>
				}
			</tbody>

			</table>

		<div class="row pt-3 pb-2">


			<div>
			<a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">

					Yeni Kiralama Oluştur
			</a>
			</div>

		</div>
			
	</div>





