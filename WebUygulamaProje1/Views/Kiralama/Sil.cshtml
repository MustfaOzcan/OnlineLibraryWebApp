@model Kiralama

<form method="post">

	<div class="border p-3 mt-5">
		<div class=" row pb-3">
			<h2 class="text-primary">Kiralama Kayıt Sil</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label asp-for="Id" class="p-0"></label>
			<input asp-for="Id" disabled class="form-control" />

		</div>
		<div class="mb-3">
			<label asp-for="OgrenciId" class="p-0"></label>
			<input asp-for="OgrenciId" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="OgrenciId" class="p-0"></label>
			<input asp-for="OgrenciId" disabled class="form-control" />

		</div>

		
		<div class="form-group">
			<label asp-for="KitapId" class="p-0"></label>
			<select asp-for="KitapId" asp-items="ViewBag.KitapList" disabled class="form-control">
			</select>
		</div>

		<div class="form-group">
			<label asp-for="Kitap.ResimURL" class="p-0"></label>

			<div class="col-2">
				@if (Model.Kitap != null)
				{
					<img src="@Model.Kitap.ResimURL" width="100%" style="border-radius:7px; border:1px solid">
				}
			</div>


		</div>

		

		<button type="submit" class="btn btn-lg btn-primary" style="width:200px">Kiralama Kayıt Sil</button>
		<a asp-controller="Kiralama" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
			Kiralamalar Listesi
		</a>
	</div>

</form>
