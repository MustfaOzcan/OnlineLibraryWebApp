@model List<KitapTuru> 

@if (TempData["basarili"] != null)
{
	<h2 class="text-success">@TempData["basarili"]</h2>
}

	<div class="container">


		<div class="row pt-3 pb-4">

		<h1><bold>Kitap Türleri</bold></h1>

		</div>

		<table class="table table-hover">

			<thead>
				<tr class="table-primary">
					<th>
						Id
					</th>
					<th>
						Kitap Türü
					</th>

					<th>
						<!--güncelle header-->
					</th>

					<th>

						<!--sil header-->
					</th>
				</tr>
			</thead>


			<tbody>
				@foreach (var kitapTuru in Model)
				{
					<tr class="table-secondary">
						<td>
							@kitapTuru.Id
						</td>

						<td>
							@kitapTuru.Ad
						</td>
						<td>
						<a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-outline-primary">Güncelle</a>
						</td>
						<td>
						<a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-outline-danger">Sil</a>
						</td>
					
					</tr>
				}
			</tbody>

			</table>

		<div class="row pt-3 pb-2">


			<div>
				<a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">

					Yeni Kitap Türü Oluştur
				</a>
			</div>

		</div>
			
	</div>





